                </div>
                <div class="col">
                  <div class="field">
                    <%= form.label :construction_value, "Construction value ($)" %>
                    <%= form.text_field :construction_value,
                                    type: "number",
                                    min: "0",
                                    max: "1000000000",
                                    step: "any" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
