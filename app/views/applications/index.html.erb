<% content_for :nav_buttons do %>
  <button
    type="button"
    class="btn btn-sm btn-primary mx-1 text-nowrap"
    data-bs-container="body"
    data-bs-html="true"
    data-bs-custom-class="wider-popover"
    data-bs-toggle="popover"
    data-bs-placement="bottom"
    data-bs-content='<%= render 'applications/search/download_as_spreadsheet_message' %>'>
    Download as Spreadsheet
  </button>
<% end %>
<%= render 'applications/search/search_bar' %>
<%= render 'applications/search/results_table' %>
<div class="d-flex justify-content-between align-items-start pt-2">
  <span>
    <%= @total_count %>
    results available. Showing
    <%= @number_results_per_page %>
    results per page.
  </span>
  <span>
    <%== pagy_bootstrap_nav(@pagy) %>
  </span>
</div>
