<div class="container">
  <div
    class="
      row min-vh-100 d-flex pb-5 align-items-center justify-content-center
    "
  >
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
      <div class="d-flex justify-content-center mb-2">
        <%= image_tag "logo.png", class: "img-fluid mb-3 px-5" %>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :username, class: "form-label", hidden: true %>
          <%= f.text_field :username,
                       autofocus: true,
                       placeholder: "Username",
                       class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, class: "form-label", hidden: true %>
          <%= f.password_field :password,
                           autocomplete: "current-password",
                           placeholder: "Password",
                           class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <%= render "devise/flash_messages" %>

        <div class="actions">
          <div class="d-grid gap-2">
            <%= f.submit "Sign in", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
